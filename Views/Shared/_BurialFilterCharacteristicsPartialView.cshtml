@{
}

<div class="form-group">
    <label for="headdirection">Head Direction</label>
    <select class="burialFilter" id="headdirection" onchange="this.form.submit()" name="filter">
        @if (ViewBag.FilterLoc.HeadDirection == "all")
        {
            <option selected value="all">All</option>
        }
        else
        {
            <option value="all">All</option>
        }
        @foreach (var item in ViewBag.HeadDirection)
        {
            @if (ViewBag.FilterLoc.HeadDirection == item)
            {
                <option selected>@item</option>
            }
            else
            {
                <option>@item</option>
            }
        }
    </select>
</div>
