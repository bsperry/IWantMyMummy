@using Microsoft.AspNetCore.Identity
@using IWantMyMummy.Areas.Identity.Data

@inject SignInManager<IWantMyMummyUser> SignInManager
@inject UserManager<IWantMyMummyUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a slot="user-name" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <div slot="logout">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </div>
}
else
{
    <a class="pr-2" slot="login" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a slot="login" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

