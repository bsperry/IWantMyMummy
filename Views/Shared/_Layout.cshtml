<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp1</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script async src="https://cdn.byu.edu/byu-theme-components/2.x.x/byu-theme-components.min.js"></script>
    <link rel="stylesheet" href="https://cdn.byu.edu/byu-theme-components/2.x.x/byu-theme-components.min.css" media="all">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="test">
    <div class="containing-element">
        <byu-header>
            <span slot="site-title">I Want My Mummy</span>
            <byu-user-info slot="user">
                <partial name="_LoginPartial" />
            </byu-user-info>
            <byu-menu slot="nav" active-selector=".is-active">
                <a asp-controller="Home" asp-action="Index">Home</a>

                @if (ViewBag.Role == 3)
                {
                    <!--dropdown admin-->
                    <div class="dropdown">
                        <button class="dropdown-btn">Admin</button>
                        <div class="dropdown-child">
                            <a asp-controller="Admin" asp-action="Index">Users</a>
                        </div>
                    </div>
                }

                <!--dropdown burials (researcher and admin)-->
                <div style="margin-left: 15px;" class="dropdown">
                    <button class="dropdown-btn">Burials</button>
                    <div class="dropdown-child">
                        <a asp-controller="Home" asp-action="BurialList">View Burials</a>
                        @if ((ViewBag.Role == 2) || (ViewBag.Role == 3))
                        {
                            <a asp-controller="Home" asp-action="ResearchPage">Add Burial</a>
                        }

                    </div>
                </div>

            </byu-menu>

        </byu-header>


        @RenderBody()

        <byu-footer>
            <byu-footer-column>
                <span slot="header">Contact</span>
                <p>
                    BYU Speeches
                    <br> 701 East University Parkway
                    <br> Provo, Utah 84602
                    <br> 888-888-8888
                </p>
                <byu-footer-action-button>
                    <a href="https://www.google.com" class="text-white" slot="actiontext">GIVE to Speeches</a>
                </byu-footer-action-button>
            </byu-footer-column>
            <byu-footer-column>
                <span slot="header">Affiliated Speeches</span>
                <a href="https://www.byui.edu">BYU-Idaho Speeches</a>
                <a href="https://www.byuh.edu">BYU-Hawaii Speeches</a>
                <a href="https://womensconference.byu.edu">Women's Conference</a>
                <a href="https://kennedy.byu.edu/lectures">Kennedy Center Lectures</a>
                <a href="https://wheatley.byu.edu/">Wheatley Institution</a>
            </byu-footer-column>
            <byu-footer-column>
                <span slot="header">Related Links</span>
                <a href="https://www.churchofjesuschrist.org/">Church of Jesus Christ</a>
                <a href="https://alumni.byu.edu/">BYU Alumni</a>
                <a href="https://today.byu.edu/">BYU Today</a>
                <a href="https://magazine.byu.edu/">BYU Magazine</a>
            </byu-footer-column>
            <byu-footer-column>
                <span slot="header">Connect With Us</span>
                <a>Feedback</a>
                <a>Help</a>
                <a>Follow BYU Speeches</a>
                <byu-social-media-links>
                    <!--Note: These all have text that will be hidden. The text should be there to help screen readers.-->
                    <a class="facebook" href="https://www.facebook.com">Facebook</a>
                    <a class="instagram" href="https://www.instagram.com">Instagram</a>
                    <a class="twitter" href="https://www.twitter.com">Twitter</a>
                    <a class="linkedin" href="https://www.linkedin.com">Linkedin</a>
                    <a class="youtube" href="https://www.youtube.com">YouTube</a>
                </byu-social-media-links>
            </byu-footer-column>
        </byu-footer>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
