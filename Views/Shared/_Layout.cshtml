<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BYU</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script async src="https://cdn.byu.edu/byu-theme-components/2.x.x/byu-theme-components.min.js"></script>
    <link rel="stylesheet" href="https://cdn.byu.edu/byu-theme-components/2.x.x/byu-theme-components.min.css" media="all">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="test">
    <div class="containing-element">
        <byu-header>
            <span slot="site-title">Fag El-Gamous</span>
            <byu-user-info slot="user">
                <partial name="_LoginPartial" />
            </byu-user-info>
            <byu-menu slot="nav" active-selector=".is-active">
                <a asp-controller="Home" asp-action="Index">Home</a>

                @if (ViewBag.Role == 3)
                {
                    <!--dropdown admin-->
                    <div class="dropdown">
                        <button class="dropdown-btn">Admin</button>
                        <div class="dropdown-child">
                            <a asp-controller="Admin" asp-action="Index">Users</a>
                        </div>
                    </div>
                }
                <a asp-controller="Home" asp-action="Analytics">Analytics</a>

                <!--dropdown burial -->
                <div style="margin-left: 15px;" class="dropdown">
                    <button class="dropdown-btn">Burial</button>
                    <div class="dropdown-child">
                        <a asp-controller="Burials" asp-action="Index">View Burials</a>
                        @if ((ViewBag.Role == 2) || (ViewBag.Role == 3))
                        {
                            <a asp-controller="Burials" asp-action="Create1">Add Burial</a>

                        }

                    </div>
                </div>

                <!--dropdown burialSquares (researcher and admin)-->
                <div style="margin-left: 15px;" class="dropdown">
                    <button class="dropdown-btn">Square</button>
                    <div class="dropdown-child">
                        <a asp-controller="BurialSquares" asp-action="Index">View Burial Squares</a>
                        @if ((ViewBag.Role == 2) || (ViewBag.Role == 3))
                        {
                            <a asp-controller="BurialSquares" asp-action="Create">Add Burial Square</a>

                        }

                    </div>
                </div>

                <!--dropdown burialQuadrant (researcher and admin)-->
                <div style="margin-left: 15px;" class="dropdown">

                    <button class="dropdown-btn">Quadrants</button>


                    <div class="dropdown-child">
                        <a asp-controller="BurialQuadrants" asp-action="Index">View Burial Quadrants</a>
                        @if ((ViewBag.Role == 2) || (ViewBag.Role == 3))
                        {
                            <a asp-controller="BurialQuadrants" asp-action="Create">Add Burial Quadrant</a>

                        }

                    </div>
                </div>
                <!--dropdown Images (all)-->
                <div style="margin-left: 15px;" class="dropdown">
                    <button class="dropdown-btn">Additional</button>
                    <div class="dropdown-child">
                        <a asp-controller="Images" asp-action="Index">View Images</a>
                        <a asp-controller="CranialSamples" asp-action="Index" method="get">View Cranial Samples</a>
                        <a asp-controller="RackSamples" asp-action="Index" method="get">View Rack Samples</a>

                    </div>
                </div>

                <a href="https://byu.maps.arcgis.com/apps/CEWebViewer/viewer.html?3dWebScene=b97ad484af45498cacabc2bb9d43390b" target="_blank">Walkthrough</a>
                <a asp-controller="Home" asp-action="MummyJokes">Mummy Jokes</a>


            </byu-menu>

        </byu-header>

        <div class="page-content">
            @RenderBody()
        </div>
        

        <byu-footer>
            <byu-footer-column>
                <span slot="header">Contact</span>
                <p>
                    Dr. Kerry Muhlestein
                    <br> Ancient Scripture
                    <br> ancientegypt@byu.edu
                    <br> (555)-555-5555
                </p>
            </byu-footer-column>
            <byu-footer-column>
                <span slot="header">Related Links</span>
                <a href="https://www-sciencedirect-com.erl.lib.byu.edu/science/article/pii/S2352409X15000188" target="_blank">Fag El-Gamous</a>
                <a href="https://religion.byu.edu/event/egyptian-excavation-exhibit" target="_blank">BYU Egypt Excavation</a>
                <a href="https://www.byu.edu/" target="_blank">BYU</a>
                <a href="https://www.churchofjesuschrist.org/" target="_blank">Church of Jesus Christ</a>
            </byu-footer-column>
            <byu-footer-column>
                <span slot="header">Connect With Us</span>
                <a>Feedback</a>
                <a>Help</a>
                <a>Follow BYU</a>
                <byu-social-media-links>
                    <!--Note: These all have text that will be hidden. The text should be there to help screen readers.-->
                    <a class="facebook" href="https://www.facebook.com" target="_blank">Facebook</a>
                    <a class="instagram" href="https://www.instagram.com" target="_blank">Instagram</a>
                    <a class="twitter" href="https://www.twitter.com" target="_blank">Twitter</a>
                    <a class="linkedin" href="https://www.linkedin.com" target="_blank">Linkedin</a>
                    <a class="youtube" href="https://www.youtube.com" target="_blank">YouTube</a>
                </byu-social-media-links>
            </byu-footer-column>
        </byu-footer>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
