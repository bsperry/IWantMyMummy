@model IWantMyMummy.Models.BurialSquare

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container viewContainer">
    <h1>Create Burial Square</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="BurialSquareId" class="control-label"></label>
                    <input asp-for="BurialSquareId" class="form-control" value="N 10/20 E 10/20" />
                    <span asp-validation-for="BurialSquareId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BurialLocationNs" class="control-label">Burial Location (N/S)</label>
                    <select asp-for="BurialLocationNs" class="form-control">
                        <option></option>
                        <option>N</option>
                        <option>S</option>
                    </select>
                    <span asp-validation-for="BurialLocationNs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BurialLocationEw" class="control-label">Burial Location (E/W)</label>
                    <select asp-for="BurialLocationEw" class="form-control">
                        <option></option>
                        <option>E</option>
                        <option>W</option>
                    </select>
                    <span asp-validation-for="BurialLocationEw" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LowPairNs" class="control-label">Low Pair (N/S)</label>
                    <input asp-for="LowPairNs" class="form-control" />
                    <span asp-validation-for="LowPairNs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HighPairNs" class="control-label">High Pair (N/S)</label>
                    <input asp-for="HighPairNs" class="form-control" />
                    <span asp-validation-for="HighPairNs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LowPairEw" class="control-label">Low Pair (E/W)</label>
                    <input asp-for="LowPairEw" class="form-control" />
                    <span asp-validation-for="LowPairEw" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HighPairEw" class="control-label">High Pair (N/S)</label>
                    <input asp-for="HighPairEw" class="form-control" />
                    <span asp-validation-for="HighPairEw" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Squares</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
