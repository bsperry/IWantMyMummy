@model BurialInformationViewModel
@*@model IWantMyMummy.Models.BurialQuadrant*@

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>BurialQuadrant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.BurialQuadrant.BurialSquareId" class="control-label"></label>
                <select asp-for="@Model.BurialQuadrant.BurialSquareId" class="form-control">
                    @foreach (var SquareID in Model.BurialSquare)
                    {
                        <option>@SquareID.BurialSquareId</option>
                    }

                </select>
                <p>
                    <a asp-controller="BurialSquares" asp-action="Create">Create New</a>
                </p>

                <span asp-validation-for="@Model.BurialQuadrant.BurialSquareId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BurialQuadrant.BurialSubplot" class="control-label"></label>
                <select asp-for="@Model.BurialQuadrant.BurialSubplot" class="form-control">
                    <option>NE</option>
                    <option>NW</option>
                    <option>SE</option>
                    <option>SW</option>
                </select>

                <span asp-validation-for="@Model.BurialQuadrant.BurialSubplot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
