@model IEnumerable<IWantMyMummy.Models.BurialQuadrant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BurialSquareId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BurialSubplot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BurialSquareId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BurialSubplot)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BurialSquareId" asp-route-subid="@item.BurialSubplot">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BurialSquareId" asp-route-subid="@item.BurialSubplot">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

