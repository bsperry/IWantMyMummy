@{
}

@model IEnumerable<IWantMyMummy.Areas.Identity.Data.IWantMyMummyUser>

<div class="container viewContainer">
    <h1>Users</h1>
    <br /><br />
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Firstname</td>
                    <td>@user.LastName</td>
                    <td>
                        <div class="row">
                            <div class="col-lg-2">
                                <form asp-action="EditUser" asp-controller="Admin" method="get">
                                    <input type="hidden" value="@user.Id" name="userId" id="userId" />
                                    <input class="btn btn-secondary" type="submit" value="Edit" />
                                </form>
                            </div>

                            <div class="col-lg-3">
                                <!-- Trigger the modal with a button -->
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@(user.LastName + user.Id)">Delete</button>
                            </div>

                            <!-- Modal -->
                            <div id="@(user.LastName + user.Id)" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this user?<p>
                                        </div>
                                        <div class="modal-footer">

                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <form asp-controller="Admin" asp-action="DeleteUser" method="post">
                                                <input type="hidden" value="@user.Id" name="userId" id="userId" />
                                                <input type="submit" value="Confirm" class="btn btn-danger" />
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!--end of modal-->
                        </div>

                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
